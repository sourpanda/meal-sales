<div class="row justify-content-md-center">
    <div class="col-md-3 centre">
        <h2>Customer Login</h2>
        <a href="" class="googlebutton">Sign in with Google</a>
        <hr><br>
        <form action="/login" method="POST">
            <div class="form-group">
                
            {{#if Errors}}

            <p class="error">Email or Password incorrect</p>
            <input type="text" class="form-control error" name="email" placeholder="Email" value="{{p_em}}">
            </div>
            <div class="form-group">
            <input type="password" class="form-control error" name="password" placeholder="Password">

            {{else}}

            <input type="text" class="form-control" name="email" placeholder="Email">
            </div>
            <div class="form-group">
            <input type="password" class="form-control" name="password" placeholder="Password">

            {{/if}}
            </div>
            <button type="submit" class="btn btn-primary">Log In</button>
            <br><br>
        </form>
    </div>
</div>